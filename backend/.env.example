# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas
MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster.mongodb.net/krx_stock?retryWrites=true&w=majority

# JWT
JWT_SECRET=change_me_to_random_secret
JWT_REFRESH_SECRET=change_me_to_random_refresh_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# KIS Open API (PRIMARY)
KIS_APP_KEY=your_kis_app_key
KIS_APP_SECRET=your_kis_app_secret
KIS_BASE_URL=https://openapi.koreainvestment.com:9443

# Yahoo Finance (FALLBACK — no key needed)

# Google Gemini AI
GEMINI_API_KEY=your_gemini_key

# OpenAI (backup) — or Groq
GROQ_API_KEY=your_groq_key

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URLs (CORS)
APP_URL=http://localhost:3000
ADMIN_URL=http://localhost:5173
